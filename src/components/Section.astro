---
const { as = "div", class: className } = Astro.props;
const SectionTag = as;
const hasExtraSlot = Astro.slots.has("extra");
const classList = [
  "container mx-auto p-4 flex flex-col justify-center lg:grid lg:gap-x-6 gap-y-2 lg:gap-y-4 lg:grid-cols-2 pt-12 pb-16 lg:py-32",
  { extra: hasExtraSlot },
  className,
];
---

<SectionTag>
  <div class:list={classList} >
    <slot />
    <slot name="extra" />
  </div>
</SectionTag>
